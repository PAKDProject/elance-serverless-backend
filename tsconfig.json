{
    "compilerOptions": {
      "target": "es6",
      "rootDir": "src",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": false,
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "types": ["node", "mocha"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [
        "es2017",
        "dom",
        "esnext.asynciterable"
      ]
    },
    "include": [
      "src/**/*"
    ]
}